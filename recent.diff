+/**
+ * Compose two optics
+ * @param outer - The outer optic
+ * @param inner - The inner optic
+ * @returns A composed optic
+ */
+export function compose<P1, P2, S, T, A, B, C, D>(
+  outer: Optic<P1, S, T, A, B>,
+  inner: Optic<P2, A, B, C, D>
+): Optic<any, S, T, C, D> {
+  return (pcd: Apply<any, [C, D]>) => {
+    const pab = inner(pcd);
+    return outer(pab);
+  };
+}
