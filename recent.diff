+// ============================================================================
+
+/**
+ * Check if a value is a lens
+ */
+export function isLens<S, T, A, B>(value: any): value is Lens<S, T, A, B> {
+  return value && typeof value.get === 'function' && typeof value.set === 'function';
+}
