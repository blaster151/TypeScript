+/**
+ * Identity Traversing - extends IdentityProfunctor with traversal operations
+ */
+export interface IdentityTraversing extends Traversing<FunctionK>, IdentityProfunctor {
+  traverse<A, B, F extends Kind1>(
+    app: Applicative<F>,
+    pab: (a: A) => B,
+    fa: Apply<F, [A]>
+  ): Apply<F, [(a: A) => B]> {
