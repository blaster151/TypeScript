+bichainEither<L, R, L2, R2>(
+  onLeft: (l: L) => Either<L2, R2>,
+  onRight: (r: R) => Either<L2, R2>
+): (ma: Either<L, R>) => Either<L2, R2>
+
+chainLeftEither<L, R, L2>(
